# Security Configuration
TLS_REJECT_UNAUTHORIZED=true

# Application Configuration
APP_NAME=app name
ADMIN_EMAIL=email

# Client-side Environment Variables (VITE_ prefix required)
VITE_APP_NAME=app name
VITE_ADMIN_EMAIL=email