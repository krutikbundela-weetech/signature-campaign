# Production Server Configuration
PORT=3001
NODE_ENV=production

# Frontend Configuration (Update these URLs for your production deployment)
VITE_FRONTEND_URL=production url
VITE_API_BASE_URL=production url

# CORS Configuration (Update with your production domains)
CORS_ORIGINS=production url

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=email
EMAIL_PASS=password 16 characters

